<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/items_message_user"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/items_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="新私信asdasdsadasdqwregweryeryweryer"
        android:layout_marginTop="10dp"
        android:layout_marginRight="120dp"
        android:layout_toRightOf="@+id/items_message_user"
        />

    <TextView
        android:id="@+id/items_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016年12月5日"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/items_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您有一条新的私信"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/items_message_user"
        android:layout_below="@+id/items_message_title"
        />

</RelativeLayout>