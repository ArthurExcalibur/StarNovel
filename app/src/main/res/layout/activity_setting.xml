<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#33000000"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="#fff"
        >

        <ImageButton
            android:id="@+id/activity_setting_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:background="@mipmap/back_blue"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="基本设置"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        />

    <LinearLayout
        android:id="@+id/activity_setting_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        >
        <ImageView
            android:id="@+id/activity_setting_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/user"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出当前账号"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于我们"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/activity_setting_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="版本介绍"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#fff"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/activity_setting_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检查更新"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#fff"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="1px"
        />

    <TextView
        android:id="@+id/activity_setting_advice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="反馈建议"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="#fff"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="1px"
        />


</LinearLayout>
