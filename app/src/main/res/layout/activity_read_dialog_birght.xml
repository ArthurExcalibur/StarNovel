<?xml version="1.0" encoding="utf-8"?>
<com.excalibur.starnovel.view.ThemeChangeableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_read_item2Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.excalibur.starnovel.view.ThemeChangeableTextView
        android:id="@+id/activity_read_brightnessNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="亮度"
        android:padding="20dp"
        />

    <SeekBar
        android:id="@+id/activity_read_brightness_seekbar"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        />

</com.excalibur.starnovel.view.ThemeChangeableLinearLayout>