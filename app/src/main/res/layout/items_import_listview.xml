<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/items_import_listview_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/novel"
        android:layout_margin="5dp"
        />

    <TextView
        android:id="@+id/items_import_listview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dsfasdf"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/items_import_listview_icon"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="70dp"
        />

    <TextView
        android:id="@+id/items_import_listview_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/items_import_listview_title"
        android:layout_toRightOf="@+id/items_import_listview_icon"
        android:layout_marginBottom="5dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="70dp"
        />

    <CheckBox
        android:id="@+id/items_import_listview_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:clickable="false"
        android:focusable="false"
        />

    <TextView
        android:id="@+id/items_import_listview_importText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已导入"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textColor="#009966"
        />
</RelativeLayout>
